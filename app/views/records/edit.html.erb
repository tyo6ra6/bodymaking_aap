   
<div class="container mt-5">
  <div class="row">
    <div class="col-6 mx-auto">

  <h1>本日のトレーニングを記録<i class="fa-solid fa-pen"></i></h1>
  <%=form_with model: @record, local: true do |f|%>


<div class="form-group">
      <%= f.label :days, "日付" %><br />
      <%= f.date_field  :days, class: "form-control"%>
     </div>
   
    <div class="form-group">
    <%= f.label :training_site_id, "トレーニング部位" %><br />
    <%= f.collection_select :training_site_id, TrainingSite.all, :id, :name, {}, class: "form-control" %>
    </div>

     <div class="form-group">
    <%= f.label :training_event_id , "トレーニング種目" %><br />
    <%= f.collection_select :training_event_id ,TrainingEvent.all, :id, :name, {}, class: "form-control"%>
    </div>

    <div class="form-group">
    <%= f.label :weight, "重量 or 消費カロリー" %><br />
    <%= f.text_field :weight, id:"record_weight",placeholder:"キログラム or カロリー", autofocus: true, autocomplete: "height", class: "form-control"  %>
     </div>


     <div class="form-group">
    <%= f.label :times_id , "回数・有酸素時間" %><br />
    <%= f.collection_select :times_id ,Times.all, :id, :name, {}, class: "form-control"  %>
    </div>

    
    <div class="form-group">
    <%= f.label :set_count_id, "セット数" %><br />
    <%= f.collection_select :set_count_id,SetCount.all, :id, :name, {}, class: "form-control"  %>
    </div>

  <div class="form-group">
     <%= f.label :thoughts , "感想・備考欄" %><br />
     <%= f.text_area :thoughts, class:"text", id:"record_thoughts", placeholder:"トレーニングの感想・メモ" ,rows:"7" ,maxlength:"1000" ,class: "form-control"%>
  </div>

   <div class="form-group">
     <%= f.label :thoughts , "画像を添付" %><br />
     <%= f.file_field :image, id:"record-image", class: "form-control" %>
   </div>


     <div>  
        <div class="d-grid gap-2 col-6 mx-auto">
          <%= f.submit "記録を編集する", class: "btn btn-primary" %>
           <%=link_to 'もどる', record_path, class:"btn btn-primary" %>
        </div>
      </div>
    </div>   
     
 <% end %>
</div>
</div>
</div>
