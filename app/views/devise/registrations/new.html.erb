
 

<div class="container mt-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <h1>Sign up<i class="fa-solid fa-user"></i></h1>
      <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
           <%= f.label :name, "ニックネーム" %><br />
          <%= f.text_field :nickname, autofocus: true, class: "form-control" %>
        </div>

        <div class="form-group">
        <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password, "パスワード（6文字以上）" %><br />
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

         <div class="form-group">
           <%= f.label :sex_id, "性別" %><br />
          <%= f.collection_select :sex_id, Sex.all, :id, :name, {}, class: "form-control" %>
        </div>

         <div class="form-group">
           <%= f.label :generation_id, "年齢" %><br />
         <%= f.collection_select :generation_id, Generation.all, :id, :name, {}, class: "form-control" %>
        </div>

         <div class="form-group">
           <%= f.label :height, "身長" %><br />
          <%= f.text_field :height,  autofocus: true, autocomplete: "height", class: "form-control" %>
         </div>

       <div class="form-group">
         <%= f.label :body_weight, "体重" %><br />
         <%= f.text_field :body_weight, id:"user_body_weight", autofocus: true, autocomplete: "body_weight", class: "form-control" %>
       </div>
        </div>
        <div>
        <div class="d-grid gap-2 col-6 mx-auto">
          <%= f.submit "Sign up", class: "btn btn-primary" %>
        </div>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>












  